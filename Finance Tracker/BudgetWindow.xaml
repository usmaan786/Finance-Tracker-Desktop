<Window x:Class="Finance_Tracker.BudgetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Finance_Tracker"
        mc:Ignorable="d"
        Title="BudgetWindow" Height="75" Width="150">
    <Grid>
        <TextBox x:Name="budgetText" HorizontalAlignment="Center" Margin="0,12,0,0" TextWrapping="Wrap" Text="0.00" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="setBudgetBtn" Content="Set Budget" HorizontalAlignment="Center" Margin="0,35,0,0" VerticalAlignment="Top" Click="setBudgetBtn_Click"/>

    </Grid>
</Window>
