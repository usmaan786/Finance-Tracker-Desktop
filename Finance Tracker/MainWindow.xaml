<Window x:Class="Finance_Tracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Finance_Tracker"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="fromCurrencyTxt" HorizontalAlignment="Left" Margin="72,45,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="73" Height="23"/>
        <TextBox x:Name="toCurrencyTxt" HorizontalAlignment="Left" Margin="72,90,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="73" Height="23" IsReadOnlyCaretVisible="True"/>
        <ComboBox x:Name="fromCurrenciesMenu" 
          HorizontalAlignment="Left" 
          Margin="10,45,0,0" 
          VerticalAlignment="Top" 
          Width="62" 
          Height="23">
        </ComboBox>


        <ComboBox x:Name="toCurrenciesMenu" 
          HorizontalAlignment="Left" 
          Margin="10,90,0,0" 
          VerticalAlignment="Top" 
          Width="62" 
          Height="23">
        </ComboBox>

        <Button x:Name="convertBtn" Content="Convert" HorizontalAlignment="Left" Margin="32,140,0,0" VerticalAlignment="Top" Width="76" Click="convertBtn_Click"/>

    </Grid>
</Window>
